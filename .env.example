# Project Configuration
PROJECT_NAME="Price Tracker API"
API_V1_STR="/api/v1"

# Security
# IMPORTANT: Set a strong, unique secret key for production environments.
# Generate a new one using: openssl rand -hex 32
SECRET_KEY="your_secret_key_here"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environment
# Set to "local", "development", or "production"
ENVIRONMENT="development"

# Database
# IMPORTANT: Set your actual database connection string for production.
# Example for PostgreSQL: DATABASE_URL="postgresql://user:password@localhost:5432/price_tracker_db"
# Example for SQLite (for local development only): DATABASE_URL="sqlite:///./test.db"
DATABASE_URL="postgresql://user:password@localhost:5432/price_tracker_db"

# Redis
REDIS_HOST="localhost"
REDIS_PORT=6379

# Kafka
KAFKA_BROKER_URL="localhost:9092"

# Celery
# Example for Redis: CELERY_BROKER_URL="redis://localhost:6379/0"
CELERY_BROKER_URL="redis://localhost:6379/0"
# Example for Redis: CELERY_RESULT_BACKEND="redis://localhost:6379/0"
CELERY_RESULT_BACKEND="redis://localhost:6379/0"
